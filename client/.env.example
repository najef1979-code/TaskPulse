# TaskPulse Client Configuration
# Copy this file to .env and update with your server URL

# API Server URL
# Use localhost for local development
# VITE_API_URL=http://localhost:3000/api

# Use your actual IP/hostname for network access
VITE_API_URL=http://192.168.2.128:3000/api

# For production deployments, use your actual domain
# VITE_API_URL=https://api.yourdomain.com

# Allow new user registration
# Set to 'true' to enable registration link on login page
# Set to 'false' to hide registration (admin creates accounts)
VITE_ALLOW_REGISTRATION=true
